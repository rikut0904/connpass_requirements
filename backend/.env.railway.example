# Railway 用環境変数サンプル
# Railway の Dashboard > Variables に以下キーを登録してください。

PORT=8080

# PostgreSQL (Railway の DB サービスから自動生成される接続文字列をセット)
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=disable

# セッション署名キー（十分に長いランダム文字列）
JWT_SECRET=change-me-to-long-random-string

# Discord OAuth2 クライアント設定
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://your-frontend.vercel.app/login

# Discord Bot トークン（Bot 設定画面で取得）
DISCORD_BOT_TOKEN=

# Slash コマンド等で利用する場合のみ設定
DISCORD_PUBLIC_KEY=

# connpass API 関連
CONNPASS_BASE_URL=https://connpass.com/api/v2/events/
CONNPASS_API_KEY=
CONNPASS_REQUEST_INTERVAL=1s

# 通知・スケジューラの既定値
NOTIFICATION_DEFAULT_THRESHOLD=80
SCHEDULER_POLL_INTERVAL=30m

# セッション設定
# develop: 1分, production: 3ヶ月 (デフォルト: production)
SESSION_MODE=production
